<pb ed='WYG' n='014-13b' xml:id='KR3a0007_WYG_014-13b'/><line xml:id='KR3a0007_WYG_014-13b.01'>　</line>
<line xml:id='KR3a0007_WYG_014-13b.02'>　</line>
<line xml:id='KR3a0007_WYG_014-13b.03'>　</line>
<line xml:id='KR3a0007_WYG_014-13b.04'>　</line>
